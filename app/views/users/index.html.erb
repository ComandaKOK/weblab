<%= render 'layouts/header' %>

<div class="row">
	<div class="col s10 m12 offset-s1">
		<table id="users">
		    <thead>
		          <tr>
		              <th data-field="author">Name</th>
		              <th data-field="email">email</th>
		              <th data-field="registred">Registred</th>
		              <% if current_user.admin? %>
    				  <th data-field="delete">Kill @user</th>		
 					  <% end %>
		          </tr>
		    </thead>

		    <tbody>
		    	<% @user.each do |current| %>
		          <tr>
		            <td><%= link_to current.name, current %></td>
		            <td><%= current.email %></td>
		            <td><%= time_ago_in_words(current.created_at) %></td>
		            <% if current_user.admin? %>
    					<td><%= link_to "delete", current, method: :delete, data: { confirm: "You sure?" } %></td>
 					<% end %>
		          </tr>
		        <% end %>
		    <tbody>
		</table>
	</div>
</div>

