<%= render "layouts/header" %>

<div class="row">
	<div class="col s6 offset-s3">
		<div class="userbox">
			<p>
				<%= image_tag "user/user.png", class: "responsive-img circle", size: "500x500"  %>
			</p>
			<p>
			<div class="card-panel">
					<span class="userdescription">
						<% if current_user.admin? %>
		    				<h2>Hi, @admin!</h2>
		    				@allfeedback: <%= link_to 'feed', allfeedback_path %></br>
		    			<% else %>
		    				<h2>Hi, @user!</h2>
		    				@feedback: <%= link_to 'feed', feedlist_path %></br>
		 				<% end %>
						@user:  <%= @user.name %>, </br>
						@email: <%= @user.email %>
					</span>
				</p>
				<p>
					<%= button_to "Settings", edit_user_path(current_user), :class => "btn btn-large purple lighten-2", :method => :get  %>
		      	</p>
	      	</div>
		</div>
	</div>
</div>



