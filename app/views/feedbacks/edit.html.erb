<%= render "/layouts/header" %>

<div class="row">
  <div class="col s10 offset-s1">
    <div class="card">
      <div class="card-content">
        <div class="card-image">
          <%= image_tag "answer.png" %>
          <span class="card-title black-text"><h5>There is place for answer</h5></span>
        </div>
          <%= form_for(@feedback) do |f| %>
            <p>
                  <h5>From: <%= @feedback.author%></h5>
                <% if !current_user.admin? %>
                  Original: <%= @feedback.text %>
                  Only <em>Administrator</em> can edit!
                <% else %>
                  <p><%= f.text_area  :text,   class: "form-control", placeholder: "Text"%></p>
                  <p><%= f.text_area  :adminanswer,   class: "form-control", placeholder: "Admin answer"%></p>
                  <%= f.submit "Answer", class: "btn btn-large purple lighten-2" %>
              <% end %>
            </p>
          <% end %>
        </div>
    </div>
  </div>
</div>