<% provide(:title, "All news") %>
<%= render 'layouts/header' %>

<div class="row">
  <div class="col s12">

<% if @post != nil %>
    <% @post.each do |record| %>
      <div class="card">
        <div class="card-image">
          <%= image_tag record.image %>
        </div>

        <div class="card-content">
          <p><span class="card-title"><%= link_to record.title, record%></span></p>
          <em>Author: <%= record.author %></em>
        </div>
            
        <div class="card-action">
          <%= link_to "More information", record %>
        </div>
      </div>
      <% end %>
  </div>
</div>
<% else %>

<div class="section white">
    <div class="row container">
      Oops, there is no post yet!
    </div>
</div>

<% end %>

<%= will_paginate @post %>