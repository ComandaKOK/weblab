<%= render "/layouts/header" %>

<div class="row">
  <div class="col s8 offset-s2">
    <div class="card-panel">
      <div class="card-content">
      <h1>Wellcome back, @user!</h1>
      <%= link_to 'Not a @user yet?', signup_path %>
      <% if @error != nil%>
        <h4><% @error %></h4>
      <% end %>

      <%= form_for(:session, url: sessions_path, remote: true) do |f| %>
        <p>
          <%= f.label :email %>
          <%= f.text_field :email %>
        </p>

        <p>
          <%= f.label :password %>
          <%= f.password_field :password %>
        </p>
        <%= f.submit "Sign in", class: "btn btn-large purple lighten-2" %>
      <% end %>
      </div>
    </div>
  </div>
</div>
